                @Html.EditorFor(model => model.CellphoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CellphoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <input type="submit" value="Next" class="btn btn-default" name="next" onclick="return confirm('Are you sure you want to proceed to the next page?');" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "PersonalInformation", null, new { @class = "linkDesign" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


